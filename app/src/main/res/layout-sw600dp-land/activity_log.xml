<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111C22"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="1"
        android:layout_weight="0.07">
        <ImageView
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:background="@drawable/fmlogo"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Focus Medica"
            android:textSize="29dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/md_red_500"/>


        <EditText

            android:layout_marginTop="30dp"
            android:background="@drawable/et_box"
            android:layout_gravity="center"
            android:id="@+id/coupon_id"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Title Code"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/md_grey_600"
            android:textColorHint="@color/md_grey_300" />
        <!--<android.support.design.widget.TextInputLayout
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:backgroundTint="@color/md_white_1000"
            android:textColorHint="@color/md_white_1000"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginBottom="10dp">

            <android.support.design.widget.TextInputEditText
                android:textColor="@color/md_white_1000"
                android:textColorHint="@color/md_white_1000"
                android:layout_gravity="center"
                android:id="@+id/coupon_id"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="user code"
                android:padding="10dp" />
        </android.support.design.widget.TextInputLayout>-->

        <EditText
            android:background="@drawable/et_box"
            android:layout_gravity="center"
            android:id="@+id/password"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="@string/hint_password"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_weight="0.04"
            android:textColor="@color/md_grey_600"
            android:textColorHint="@color/md_grey_300"/>
        <!-- <android.support.design.widget.TextInputLayout
             android:layout_gravity="center"
             android:layout_width="380dp"
             android:id="@+id/etpassword"
             android:layout_height="wrap_content"
             app:passwordToggleEnabled="true"
             android:layout_marginBottom="10dp">

             <android.support.design.widget.TextInputEditText
                 android:textColor="@color/md_white_1000"
                 android:textColorHint="@color/md_white_1000"
