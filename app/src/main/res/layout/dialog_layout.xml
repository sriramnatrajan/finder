<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_gravity="center"
    android:layout_height="match_parent">

  <!--  <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_800"
        android:layout_below="@+id/TV_delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view"
        android:layout_alignParentTop="true" />-->


    <TextView
        android:text="Are you sure want to delete?"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_dialogText"
        android:textColor="@color/md_grey_700"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/TV_delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/md_grey_700"
        android:text="Delete Video"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TV_delete"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_800"
        android:layout_above="@+id/layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/layout"
        android:layout_alignTop="@+id/tv_dialogText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp">

        <Button
            android:layout_margin="10dp"
            android:text="No"
            android:background="@color/md_green_500"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn"
            android:layout_weight="0.78" />

        <Button
            android:layout_margin="10dp"
            android:text="Yes"
            android:background="@color/md_red_400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valid_btn"
            android:layout_weight="0.66" />
    </LinearLayout>
</RelativeLayout>