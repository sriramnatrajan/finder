<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/info_grey"
    tools:context=".Info">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView5"
        android:src="@drawable/info_page_icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_centerHorizontal="true" />


            <TextView
                android:layout_below="@+id/imageView5"
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="center"
                android:textColor="#ffffff"
                android:paddingLeft="7dp"
                android:textStyle="italic"/>


    <RelativeLayout
        android:background="@color/info_footer"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">
    <TextView
        android:layout_above="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© Focus Medica"
        android:id="@+id/textView5"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView6"
            android:src="@drawable/fblogo"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView7"
            android:src="@drawable/twittericon"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView9"
            android:src="@drawable/linkedin"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView8"
            android:src="@drawable/webicon"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/imageView7"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <Button
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Feedback"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:onClick="feedBack"
        android:textSize="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />
    </RelativeLayout>
</RelativeLayout>
