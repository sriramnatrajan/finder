<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/md_grey_100">

        <android.support.v7.widget.CardView
            android:background="@color/md_grey_100"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:elevation="10dp"
            card_view:cardCornerRadius="5dp"
            card_view:contentPadding="0dp">

                <RelativeLayout
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                        <TextView
                            android:lines="2"
                            android:minLines="2"
                            android:singleLine="false"
                            android:paddingLeft="20dp"
                            android:id="@+id/chapter"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="normal"
                            android:layout_gravity="center"
                            android:text="Introduction"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:textSize="15dp"
                            android:text="00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="1dp"
                            android:layout_alignRight="@+id/image_arrow"
                            android:layout_alignEnd="@+id/image_arrow"
                            android:id="@+id/tv_length"
                            android:layout_alignLeft="@+id/image_arrow"
                            android:layout_alignStart="@+id/image_arrow"
                            android:layout_alignBottom="@+id/chapter_thumb" />


                        <ImageView
                            android:background="@drawable/botton_shape"
                            android:id="@+id/chapter_thumb"
                            android:layout_width="85dp"
                            android:layout_gravity="left"
                            android:layout_height="85dp"
                            android:layout_marginLeft="23dp"
                            android:layout_marginStart="23dp"
                            android:layout_alignTop="@+id/chapter"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                </RelativeLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
