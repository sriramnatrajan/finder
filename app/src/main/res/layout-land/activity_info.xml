<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/info_grey"
    tools:context=".Info">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView5"
        android:src="@drawable/info_page_icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_centerHorizontal="true" />


        <TextView
            android:layout_below="@+id/imageView5"
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:text="text"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="italic" />
    <RelativeLayout
        android:background="@color/info_footer"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© Focus Medica"
        android:id="@+id/textView5"
        android:layout_below="@+id/scrollView"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView6"
            android:src="@drawable/fblogo"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView7"
            android:src="@drawable/twittericon"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView9"
            android:src="@drawable/linkedin"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView8"
            android:src="@drawable/webicon"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/imageView7"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Feedback"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:onClick="feedBack"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />
    </RelativeLayout>
</RelativeLayout>
